{
  "name": "obi",
  "displayName": "obi",
  "description": "Object Builder for i",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "obi.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "obi.show_changes",
        "title": "Show changes"
      },
      {
        "command": "obi.run_build",
        "title": "Run build"
      },
      {
        "command": "obi.source-lists.update",
        "title": "Update source list",
        "icon": "$(refresh)"
      },
      {
        "command": "obi.controller.config",
        "title": "Configuration",
        "icon": "$(settings-gear)"
      },
      {
        "command": "obi.source-lists.show-view",
        "title": "Show source list",
        "icon": "$(preview)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "obi.source-lists.update",
          "when": "obi.contains_obi_project == true && view == obi.source-lists",
          "group": "navigation"
        },
        {
          "command": "obi.controller.config",
          "when": "obi.contains_obi_project == true && view == obi.controller",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "obi.source-lists.update",
          "when": "obi.contains_obi_project == true && view == obi.source-lists && viewItem == source-member",
          "group": "inline"
        },
        {
          "command": "obi.source-lists.show-view",
          "when": "obi.contains_obi_project == true && view == obi.source-lists && viewItem == source-list",
          "group": "inline"
        },
        {
          "command": "obi.source-lists.update",
          "when": "view == obi.source-lists"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "obi-bar",
          "title": "Object Builder for i",
          "icon": "$(code)"
        }
      ]
    },
    "views": {
      "obi-bar": [
        {
          "type": "webview",
          "id": "obi.controller",
          "name": "OBI",
          "when": "obi.contains_obi_project == true"
        },
        {
          "type": "tree",
          "id": "obi.source-lists",
          "name": "Source lists",
          "when": "obi.contains_obi_project == true"
        },
        {
          "id": "obi-welcome",
          "name": "Welcome",
          "when": "obi.contains_obi_project == false"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "obi-welcome",
        "contents": "Show \n[Hello](command:vscode.catstart)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "node ./esbuild.js",
    "package": "NODE_ENV=production node ./esbuild.js",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@theia/core": "latest",
    "@theia/plugin-ext-vscode": "latest",
    "@theia/vsx-registry": "latest",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.91.0",
    "@types/vscode-webview": "^1.57.5",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.1",
    "deepmerge": "latest",
    "deepmerge-ts": "latest",
    "esbuild": "^0.16.17",
    "eslint": "^8.57.0",
    "nunjucks": "^3.2.4",
    "smol-toml": "latest",
    "ts-interface-builder": "^0.3.3",
    "ts-interface-checker": "^1.0.2",
    "typescript": "^5.4.5"
  },
  "theia": {
    "target": "browser"
  },
  "dependencies": {
    "@vscode/webview-ui-toolkit": "^1.4.0"
  }
}
