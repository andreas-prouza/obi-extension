{
  "name": "obi",
  "displayName": "Object Builder for i (OBI)",
  "description": "Automated build tool for IBM i",
  "version": "0.1.0",
  "keywords": [
		"ibmi",
		"iseries",
		"as400",
		"rpgle",
		"ile",
		"build"
	],
  "author": {
		"name": "Andreas Prouza",
		"url": "https://www.prouza.at"
	},
	"license": "MIT",
  "repository": {
		"url": "https://github.com/andreas-prouza/obi-extension"
	},
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "obi.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "obi.show_changes",
        "title": "Show changes",
        "when": "obi.contains_obi_project && obi.valid-config"
      },
      {
        "command": "obi.run_build",
        "title": "Run build",
        "when": "obi.contains_obi_project && obi.valid-config"
      },
      {
        "command": "obi.source-lists.update",
        "title": "Update source list",
        "icon": "$(refresh)",
        "when": "obi.contains_obi_project && obi.valid-config"
      },
      {
        "command": "obi.get-remote-compiled-object-list",
        "title": "Get remote compiled object list",
        "icon": "$(refresh)",
        "when": "obi.contains_obi_project && obi.valid-config"
      },
      {
        "command": "obi.get-remote-source-list",
        "title": "Get remote source list",
        "icon": "$(refresh)",
        "when": "obi.contains_obi_project && obi.valid-config"
      },
      {
        "command": "obi.check-remote-sources",
        "title": "Check remote sources",
        "icon": "$(refresh)",
        "when": "obi.contains_obi_project && obi.valid-config"
      },
      {
        "command": "obi.controller.config",
        "title": "Configuration",
        "icon": "$(settings-gear)",
        "when": "obi.contains_obi_project"
      },
      {
        "command": "obi.transfer-all",
        "title": "Transfer all",
        "icon": "$(settings-gear)",
        "when": "obi.contains_obi_project && obi.valid-config"
      },
      {
        "command": "obi.source-lists.show-view",
        "title": "Show source list",
        "icon": "$(preview)",
        "when": "obi.contains_obi_project && obi.valid-config"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "obi.source-lists.update",
          "when": "obi.contains_obi_project && obi.valid-config && view == obi.source-lists",
          "group": "navigation"
        },
        {
          "command": "obi.controller.config",
          "when": "obi.contains_obi_project && (view == obi.controller || (!obi.valid-config && view == obi-config-invalid))",
          "group": "navigation"
        },
        {
          "command": "obi.get-remote-source-list",
          "when": "obi.contains_obi_project && (view == obi.controller || (!obi.valid-config && view == obi-config-invalid))",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "obi.source-lists.update",
          "when": "obi.contains_obi_project && view == obi.source-lists && viewItem == source-member",
          "group": "inline"
        },
        {
          "command": "obi.source-lists.show-view",
          "when": "obi.contains_obi_project && view == obi.source-lists && viewItem == source-list",
          "group": "inline"
        },
        {
          "command": "obi.source-lists.update",
          "when": "view == obi.source-lists && obi.contains_obi_project"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "obi-bar",
          "title": "Object Builder for i",
          "icon": "$(code)"
        }
      ]
    },
    "views": {
      "obi-bar": [
        {
          "type": "webview",
          "id": "obi.controller",
          "name": "OBI",
          "when": "obi.contains_obi_project && obi.valid-config"
        },
        {
          "type": "tree",
          "id": "obi.source-lists",
          "name": "Source lists",
          "when": "obi.contains_obi_project && obi.valid-config"
        },
        {
          "type": "webview",
          "id": "obi-welcome",
          "name": "Welcome",
          "when": "obi.contains_obi_project == false"
        },
        {
          "type": "webview",
          "id": "obi-config-invalid",
          "name": "Invalid config",
          "when": "obi.contains_obi_project && !obi.valid-config"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "node ./esbuild.js",
    "package": "NODE_ENV=production node ./esbuild.js",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@theia/core": "latest",
    "@theia/plugin-ext-vscode": "latest",
    "@theia/vsx-registry": "latest",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.91.0",
    "@types/vscode-webview": "^1.57.5",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.1",
    "deepmerge": "latest",
    "esbuild": "^0.16.17",
    "eslint": "^8.57.0",
    "hasha": "latest",
    "node-ssh": "latest",
    "nunjucks": "^3.2.4",
    "smol-toml": "latest",
    "winston": "latest",
    "fs-extra": "latest"
  },
  "theia": {
    "target": "browser"
  },
  "dependencies": {
    "@vscode/webview-ui-toolkit": "^1.4.0"
  }
}
